<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  
  <!-- define persistence unit --> 
  <persistence-unit name="persistence-unit-c14">
    <description>JPA fundamentals</description>
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <!-- tells me how the cache is managed;
    ALL means all entities have cache enabled, NONE is the opposite;
    ENABLE_SELECTIVE means only selected entities (marked with @Cacheable) are enabled for caching
    DISABLE_SELECTIVE means that only selected entities (marked with @Cacheable(value = false)) are disabled for caching, all the others remain cacheable-->
    <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
    
    <properties>
        <!-- database connection -->
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/jpac14"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <!-- show queries generated by Hibernate -->
      <property name="hibernate.show_sql" value="true"/>
      <!-- enable second level cache -->
      <property name="hibernate.cache.use_second_level_cache" value="true"/>
      <property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.internal.EhcacheRegionFactory"/>
    </properties>
  </persistence-unit>
</persistence>
